generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id        String    @id @default(uuid())
  email     String    @unique
  firstname String
  lastname  String?
  password  String
  salt      String
  role      Role      @default(USER)
  folders   Folders[]
  files     Files[]
}

model Folders {
  id      String  @id @default(uuid())
  name    String
  Users   Users   @relation(fields: [usersId], references: [id])
  usersId String
  files   Files[]

  parentFolder Folders?  @relation("parentFolders", fields: [parentId], references: [id])
  parentId     String?
  children     Folders[] @relation("parentFolders")
}

model Files {
  id          String   @id @default(uuid())
  name        String
  fileName    String
  size        Int
  path        String
  destination String
  fileType    String
  Users       Users    @relation(fields: [userId], references: [id])
  userId      String
  Folders     Folders? @relation(fields: [folderId], references: [id])
  folderId    String?
}

enum Role {
  USER
  ADMIN
}
